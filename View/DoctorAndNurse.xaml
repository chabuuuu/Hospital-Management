            <DataGrid Name="PatientList" Grid.Row="1" 
          Height="35" 
          VerticalAlignment="top"
          Background="Transparent">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="#" Width="5*"/>
                    <DataGridTextColumn Header="ID" Width="20*">
                        <!-- Cài đặt và binding cho cột 2 -->
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tên" Width="25*">
                        <!-- Cài đặt và binding cho cột 2 -->
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Khoa" Width="20*">
                        <!-- Cài đặt và binding cho cột 2 -->
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Ngày vào làm" Width="20*">
                        <!-- Cài đặt và binding cho cột 2 -->
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Thao tác" Width="10*">
